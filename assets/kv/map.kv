#:import dp kivy.metrics.dp
#:import sp kivy.metrics.sp

<MapScreen>:
    MDScrollView:
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(16)
            spacing: dp(16)
            size_hint_y: None
            height: self.minimum_height

            # Mapa
            MDCard:
                radius: [16]
                size_hint_y: None
                height: dp(260)

                MDBoxLayout:
                    id: map_container
                    size_hint: 1, 1

            Widget:
                size_hint_y: None
                height: dp(12)

            # Botones de filtros
            MDBoxLayout:
                spacing: dp(10)
                size_hint_y: None
                height: dp(44)

                MDButton:
                    style: "tonal"
                    size_hint: None, None
                    width: dp(88)
                    height: dp(40)
                    on_release: root.toggle_filter("Papel")
                    MDButtonText:
                        text: "Papel"

                MDButton:
                    style: "tonal"
                    size_hint: None, None
                    width: dp(88)
                    height: dp(40)
                    on_release: root.toggle_filter("Pl치stico")
                    MDButtonText:
                        text: "Pl치stico"

                MDButton:
                    style: "tonal"
                    size_hint: None, None
                    width: dp(88)
                    height: dp(40)
                    on_release: root.toggle_filter("Vidrio")
                    MDButtonText:
                        text: "Vidrio"

                MDButton:
                    style: "tonal"
                    size_hint: None, None
                    width: dp(88)
                    height: dp(40)
                    on_release: root.toggle_filter("Cart칩n")
                    MDButtonText:
                        text: "Cart칩n"

                MDButton:
                    style: "tonal"
                    size_hint: None, None
                    width: dp(88)
                    height: dp(40)
                    on_release: root.toggle_filter("Latas")
                    MDButtonText:
                        text: "Latas"

                Widget:

                MDButton:
                    style: "tonal"
                    size_hint: None, None
                    width: dp(88)
                    height: dp(40)
                    on_release: root.open_route()
                    MDButtonText:
                        text: "Ruta"

            MDLabel:
                text: "Puntos de Reciclaje Cercanos"
                font_size: sp(18)
                size_hint_y: None
                height: self.texture_size[1]

            Widget:
                size_hint_y: None
                height: dp(8)

            MDBoxLayout:
                id: points_list
                orientation: "vertical"
                spacing: dp(16)
                size_hint_y: None
                height: self.minimum_height
